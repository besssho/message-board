<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
           <span class="label label-info"><%= message.name %></span>
           <%= message.body %>
           <br>
        <% end %>
    </div>
</div>


    <%= form_for(@message , html: {class:'form-horizontal'}) do |f| %>
       <div class="form-group">
            <label class="col-sm-2">名前</label>
            <div class="col-sm-4">
                <%= f.text_field :name , class:"form-control" , placeholder:"名前"  %>
            </div>
       </diV>
       <div class="form-group">
            <label class="col-sm-2" >内容</label>
            <div class="col-sm-4">
                <%= f.text_area :body ,class:"form-control" ,placeholder:"内容" %>
            </div>
       </div>
       <div class="form-group">
            <div class=" col-sm-offset-2 col-sm-10">
                <%= f.submit class:" form-control btn btn-sm btn-primary"%>
            </div>
        </div>
    <% end %>

