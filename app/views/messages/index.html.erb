<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
           <span class="label label-info"><%= message.name %></span>
           <%= message.body %>
           <br>
        <% end %>
    </div>
</div>


    <%= form_for(@message , html: {class:'form-horizontal'}) do |f| %>
       <div class="form-group">
        <label class="col-sm-2">名前</label>
        <%= f.text_field :name , class:"col-sm-10 bg-info" , placeholder:"名前"  %>
       </diV>
       <div class="form-group">
        <label class="col-sm-2">内容</label>
        <%= f.text_area :body ,class:"col-sm-10 bg-info" ,placeholder:"内容" %>
       </div>
       <div class="form-group">
        <%= f.submit class:"col-sm-offset-2 col-sm-10 btn btn-sm btn-primary"%>
        </div>
    <% end %>

