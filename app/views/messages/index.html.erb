<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
           <span class="label label-info"><%= message.name %></span>
           <%= message.body %>
           <br>
        <% end %>
    </div>
</div>

<form class="form-horizontal">
    <%= form_for(@message) do |f| %>
<div class="input-group">
  <span class="input-group-addon" id="basic-addon1">名前</span><%= f.text_field :name %>
</div>
<div class="input-group">
  <span class="input-group-addon" id="basic-addon1">内容</span><%= f.text_area :body , :size => "92" %>
</div>
<div><%= f.submit class:"btn btn-sm btn-primary"%>
</div>
    <% end %>
</form>

