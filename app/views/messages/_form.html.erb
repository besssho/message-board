    <%= form_for(@message , html: {class:'form-horizontal'}) do |f| %>
      <% if @message.errors.present? %>
         <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                 <Li>
                     <%= full_message %>
                 </Li>
                <% end %>
            </ul>
         </div>
      <% end %>
             
       <div class="form-group">
            <label class="col-sm-2">名前</label>
            <div class="col-sm-4">
                <%= f.text_field :name , class:"form-control" , placeholder:"名前"  %>
            </div>
       </diV>
       <div class="form-group">
            <label class="col-sm-2">年齢</label>
            <div class="col-sm-4">
                <%= f.number_field :age , class:"form-control" , placeholder:"年齢"  %>
            </div>
       </diV>
       <div class="form-group">
            <label class="col-sm-2" >内容</label>
            <div class="col-sm-4">
                <%= f.text_area :body ,class:"form-control" ,placeholder:"内容" %>
            </div>
       </div>
       <div class="form-group">
            <div class=" col-sm-offset-2 col-sm-10">
                <%= f.submit class:" form-control btn btn-sm btn-primary"%>
            </div>
        </div>
    <% end %>
